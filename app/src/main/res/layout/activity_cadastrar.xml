<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.renato.spotglamapp.CadastrarActivity">

    <RelativeLayout
        android:id="@+id/relativeTopLogin"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        tools:context="com.example.renato.spotglamapp.MainActivity"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="81dp">

        <View
            android:id="@+id/logoView"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:background="@color/rosinha" />

        <ImageView
            android:id="@+id/imageViewLogin"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:srcCompat="@mipmap/ic_launcher"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeTopLogin">

        <TextView
            android:id="@+id/nome"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:lineSpacingExtra="18sp"
            android:hint="Nome"
            android:textColor="@color/cinzaAppPadrao"
            android:theme="@style/EditTextLogin"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/email"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:lineSpacingExtra="18sp"
            android:layout_below="@+id/nome"
            android:hint="Email"
            android:textColor="@color/cinzaAppPadrao"
            android:theme="@style/EditTextLogin"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/senha"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:lineSpacingExtra="18sp"
            android:hint="Senha"
            android:layout_below="@+id/email"
            android:textColor="@color/cinzaAppPadrao"
            android:theme="@style/EditTextLogin"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/entrarLogin"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:text="@string/app_entrar"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/senha"
            android:backgroundTint="@color/rosinha"
            android:background="@drawable/mybutton"
            android:textColor="@color/branco"
            android:onClick="clickLoginEntrar"
            />

        <Button
            android:id="@+id/buttonFacebook"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="@string/app_entrar_facebook"
            android:layout_below="@+id/entrarLogin"
            android:textColor="@color/rosinha"
            android:background="@android:color/transparent"
            android:onClick="ClickLoginFacebook"
            />
        />

    </RelativeLayout>

</RelativeLayout>
